{
  "description": "Telegram bidirectional communication hooks for Claude Code",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/ensure-worker.js\"",
            "timeout": 10000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/notify-hook.js\" plan_ready",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/question-notify-hook.js\"",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash|Edit|Write|Read|Task|TaskOutput",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/tool-notify-hook.js\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Analyze this session to determine notification category. Choose ONE: 'stop' (task complete), 'review' (read-only analysis), 'limit' (context limit reached), 'error' (actual API error occurred - NOT when discussing/fixing errors in code). Output JSON only: {\"category\": \"...\", \"summary\": \"one line summary\"}",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/notify-hook.js\" stop",
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/notify-hook.js\" end",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
